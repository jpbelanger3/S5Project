        <script type="text/javascript">
            jQuery(document).ready(function($){
                $("#temperature").hide()
                $("#ph").hide()
                $("#fertilisant").hide()
                $("#eclairage").hide()
                $("#photo").hide()

                $("#temp_action").on("click", function(){
                    $("#temperature").slideToggle("fast")
                })

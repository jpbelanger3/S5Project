                    $("#fertilisant").slideToggle("fast")
                })
                $("#ecla_action").on("click", function(){
                    $("#eclairage").slideToggle("fast")
                })
                $("#phot_action").on("click", function(){
                    $("#photo").slideToggle("fast")
                })
            })
        </script>
        
